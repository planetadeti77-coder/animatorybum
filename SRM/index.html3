            document.getElementById(modalId).querySelector('.modal-content').style.transform = 'scale(1)';
        }, 10);
    }

    function closeModal(modalId) {
        document.getElementById(modalId).querySelector('.modal-backdrop').style.opacity = '0';
        document.getElementById(modalId).querySelector('.modal-content').style.transform = 'scale(0.95)';
        setTimeout(() => {
            document.getElementById(modalId).classList.add('hidden');
        }, 300);
    }
    
