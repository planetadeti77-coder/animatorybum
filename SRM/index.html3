    // Complete Calendar Render function
    function renderCalendar() {
        calendarBody.innerHTML = '';
        currentMonthYearEl.textContent = currentDate.toLocaleDateString('ru-RU', { month: 'long', year: 'numeric' });

        const year = currentDate.getFullYear();
        const month = currentDate.getMonth();
        const firstDayOfMonth = new Date(year, month, 1).getDay();
        const daysInMonth = new Date(year, month + 1, 0).getDate();
        
        for (let i = 0; i < firstDayOfMonth; i++) {
            const emptyDay = document.createElement('div');
            calendarBody.appendChild(emptyDay);
        }

        for (let day = 1; day <= daysInMonth; day++) {
            const dayEl = document.createElement('div');
            dayEl.className = 'calendar-day p-2 border rounded-lg hover:bg-gray-100 relative';
            dayEl.dataset.date = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
            dayEl.innerHTML = `<span class="calendar-day-header text-gray-500">${day}</span>`;
            
            // Filter events for the current day
            const dayEvents = events.filter(e => {
                const eventDate = new Date(e.date);
                return eventDate.getFullYear() === year && eventDate.getMonth() === month && eventDate.getDate() === day;
            });

            dayEvents.forEach(event => {
                const eventEl = document.createElement('div');
                eventEl.className = 'bg-indigo-200 text-indigo-800 text-xs rounded-full px-2 py-1 mt-1 truncate hover:bg-indigo-300 cursor-pointer';
                eventEl.textContent = event.title;
                eventEl.dataset.id = event.id;
                eventEl.addEventListener('click', () => openEventModal(event));
                dayEl.appendChild(eventEl);
            });
            
            dayEl.addEventListener('click', (e) => {
                if (e.target.classList.contains('calendar-day')) {
                    openEventModal(null, dayEl.dataset.date);
                }
            });

            calendarBody.appendChild(dayEl);
        }
    }

    document.getElementById('prev-month').addEventListener('click', () => {
