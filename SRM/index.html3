        const upcoming = events
            .filter(e => new Date(e.date) >= now)
            .sort((a, b) => new Date(a.date) - new Date(b.date))
            .slice(0, 5); // Show next 5 events

        if (upcoming.length === 0) {
            list.innerHTML = '<p class="text-gray-500">Нет предстоящих мероприятий.</p>';
            return;
        }

        upcoming.forEach(event => {
            const client = clients.find(c => c.id === event.clientId);
            const performer = performers.find(p => p.id === event.performerId);
            const service = services.find(s => s.id === event.serviceId);
            
            const eventEl = document.createElement('div');
            eventEl.className = 'bg-gray-50 p-4 rounded-lg border border-gray-200';
            eventEl.innerHTML = `
                <p class="text-lg font-semibold">${event.title}</p>
