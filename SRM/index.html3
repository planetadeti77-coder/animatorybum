    // Save and Delete Data functions
    async function saveData(sheetName, id, values) {
        try {
            loadingOverlay.classList.remove('hidden');
            const item = (sheetName === 'Performers' ? performers : sheetName === 'Clients' ? clients : sheetName === 'Services' ? services : events).find(i => i.id === id);
            
            if (item) {
                // Update existing row
                await updateSheetRow(sheetName, item.rowIndex, values);
            } else {
                // Add new row
                await addSheetRow(sheetName, values);
            }
            await loadAllData();
        } catch (err) {
            console.error(`Error saving data to sheet ${sheetName}:`, err);
            alert(`Ошибка сохранения данных в таблицу ${sheetName}. Проверьте консоль.`);
        } finally {
            loadingOverlay.classList.add('hidden');
        }
    }

    async function deleteData(sheetName, id) {
        try {
            loadingOverlay.classList.remove('hidden');
            const item = (sheetName === 'Performers' ? performers : sheetName === 'Clients' ? clients : sheetName === 'Services' ? services : events).find(i => i.id === id);
            if (item) {
                await deleteSheetRow(sheetName, item.rowIndex);
                await loadAllData();
            }
        } catch (err) {
            console.error(`Error deleting data from sheet ${sheetName}:`, err);
            alert(`Ошибка удаления данных из таблицы ${sheetName}. Проверьте консоль.`);
        } finally {
            loadingOverlay.classList.add('hidden');
        }
    }

    // Navigation and View Management
    navLinks.forEach(link => {
        link.addEventListener('click', (e) => {
            e.preventDefault();
            navLinks.forEach(nav => nav.classList.remove('active'));
            link.classList.add('active');
            const viewId = `view-${link.id.split('-')[1]}`;
            views.forEach(view => view.classList.add('hidden'));
            document.getElementById(viewId).classList.remove('hidden');
        });
    });

